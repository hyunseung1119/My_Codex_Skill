{
  "dashboard": {
    "title": "RAG Agent Performance Dashboard",
    "tags": ["rag", "agent", "llm"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Overall Score Trend",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "agent_overall_score",
            "legendFormat": "Overall Score",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100}
        ]
      },
      {
        "id": 2,
        "title": "Response Time (P50, P95, P99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(agent_response_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(agent_response_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(agent_response_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "min": 0}
        ]
      },
      {
        "id": 3,
        "title": "RAGAS Metrics",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "agent_context_precision",
            "legendFormat": "Context Precision",
            "refId": "A"
          },
          {
            "expr": "agent_context_recall",
            "legendFormat": "Context Recall",
            "refId": "B"
          },
          {
            "expr": "agent_faithfulness",
            "legendFormat": "Faithfulness",
            "refId": "C"
          },
          {
            "expr": "agent_answer_relevancy",
            "legendFormat": "Answer Relevancy",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "min": 0, "max": 1}
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(agent_errors_total[5m])",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "min": 0}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate Alert",
          "noDataState": "no_data",
          "notifications": [
            {"uid": "slack-notifications"}
          ]
        }
      },
      {
        "id": 5,
        "title": "Cost Tracking",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(agent_cost_total[1h])",
            "legendFormat": "Cost/Hour",
            "refId": "A"
          },
          {
            "expr": "sum(rate(agent_cost_total[24h])) * 24 * 30",
            "legendFormat": "Projected Monthly Cost",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "min": 0}
        ]
      },
      {
        "id": 6,
        "title": "Top Slow Queries",
        "type": "table",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, agent_query_duration_seconds)",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Hallucination Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "1 - avg(agent_faithfulness)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.08},
                {"color": "red", "value": 0.15}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Accuracy",
        "type": "stat",
        "gridPos": {"x": 6, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "agent_accuracy_rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.9}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Avg Response Time",
        "type": "stat",
        "gridPos": {"x": 12, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "avg(rate(agent_response_seconds_sum[5m]) / rate(agent_response_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 2.0},
                {"color": "red", "value": 3.0}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Query Volume",
        "type": "stat",
        "gridPos": {"x": 18, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(agent_queries_total[1h])) * 3600",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 30,
    "style": "dark",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  }
}
